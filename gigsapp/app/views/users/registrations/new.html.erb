<div class="mx-auto" style="width: 80%;">
  <div class="container">
    <div class="jumbotron" style="margin-top: 30px;">
      <h1 class="font-weight-bold text-center" style="margin-bottom:50px;">Sign up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <form>
          <div class="form-group row">
            <label for="Name" class="col-sm-2 col-form-label">Name</label>

            <div class="col">
              <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: "First Name" %>
            </div>

            <div class="col">
              <%= f.text_field :last_name, autofocus: true, class: 'form-control', placeholder:"Last Name" %>
            </div>
          </div>

          <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "e.g.love_gigs@example.com" %>
            </div>
          </div>

          <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
              <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder:"e.g. Gig Master" %>
            </div>
          </div>

          <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Enter your password" %>
            </div>
          </div>

          <div class="form-group row">
            <label for="inputConfirmed" class="col-sm-2 col-form-label">Confirmed Password</label>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Enter your confirmed password" %>
            </div>
          </div>

          <div class="form-group row">
            <label for="Bio" class="col-sm-2 col-form-label">Bio</label>
            <div class="col-sm-10">
              <%= f.text_area :bio, autofocus: true , class: 'form-control', placeholder: "Briefly describe yourself" %>
            </div>
          </div>

          <div class="form-group row">
            <label for="Address1" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
              <%= f.text_field :address, autofocus: true, class: 'form-control', placeholder: "1234 Gigs St" %>
            </div>
          </div>

          <div class="form-group row">
            <label for="Address2" class="col-sm-2 col-form-label">Address2</label>
            <div class="col-sm-10">
              <%= f.text_field :address2, autofocus: true, class: 'form-control', placeholder: "Apartment,studio, or floor" %>
            </div>
          </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
        </form>
      <% end %>

      <%= render "users/shared/links" %>
      <%= devise_error_messages! %>

    </div>
  </div>
</div>
