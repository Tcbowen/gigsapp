<div class = "background_color">
  <head>
    <link href="https://fonts.googleapis.com/css?family=Cabin+Sketch|Luckiest+Guy|Overlock|Special+Elite" rel="stylesheet">
    <%= stylesheet_link_tag "job_applications" %>

  </head>


  <body>
    <!-- Page Content -->
    <div class="container post">
      <h1 class="mt-1 mb-3">&nbsp</h1>
      <div class="jumbotron">

        <h1>Applications - <%= @post.title %></h1>

        <table class ="table table-striped table-hover">
          <thead>
            <tr class="thread-light">
              <th scope="col">Applicant</th>
              <th scope="col">Email</th>
              <th scope="col">Employer's Offer</th>
              <th scope="col">Applicant's Request</th>
              <th></th>
            </tr>
          </thead>

            <tbody>
              <% @job_applications.each do |job_application| %>
                  <% if @post.id == job_application.post_id %>

                    <% @users.each do |user| %>
                      <% if user.id == job_application.user_id %>

                  <tr class="table-row">
                    <td><%= link_to user.first_name + " " + user.last_name, user%></td>
                    <td><%= user.email %></td>
                    <td>$<%= @post.rate %></td>
                    <td>$<%= job_application.ask_rate %></td>

                    <td>
                    <%= link_to 'Accept', update_accepted_job_application_path(attr: true, id: job_application.id), method: :patch, class: "btn btn-success" %>
                    <%= link_to 'Decline', update_accepted_job_application_path(attr: true, id: job_application.id), method: :patch, class: "btn btn-danger" %>
                    </td>

                  </tr>
                <% end %>
                <% end %>
                <% end %>
              <% end %>
            </tbody>
        </table>

        <%= link_to 'Back', post_path(@post), class: "btn btn-warning" %>
        </div>

      </div>
      <hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr>
    </div>
  </body>
</div>
