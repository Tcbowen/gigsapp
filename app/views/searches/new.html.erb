<div class = "background_color">
  <head>
    <link href="https://fonts.googleapis.com/css?family=Cabin+Sketch|Luckiest+Guy|Overlock|Special+Elite" rel="stylesheet">
    <%= stylesheet_link_tag "profile" %>
  </head>

<body>
  <div class="container post">
    <h1 class="mt-1 mb-3">&nbsp</h1>
    <div class="jumbotron ">

    <h1>Advanced Search</h1>
    <%= form_for @search, html: {class: "pure-form"} do |s| %>
      <div class="field">
        <%= s.label :title %><br />
        <%= s.text_field :title %>
      </div>
      <div class="field">
        <%= s.label :description %><br />
        <%= s.text_field :description %>
      </div>
      <div class="field">
        <%= s.label :location %><br />
        <%= s.text_field :location %>
      </div>
      <div class="field">
        <%= s.label :rate, "Rate" %><br />
        <%= s.text_field :rate, size: 10 %>
      </div>
      <br>
      <div class="actions"><%= s.submit "Search", class: "btn btn-success" %>
      </div>
    <% end %>
    <br>

    <p><%= link_to 'Back', posts_path, class: "btn btn-warning" %></p>
</div>
</div>
</<body>
</div>
