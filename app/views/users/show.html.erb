<table class="table table-striped">
  <thead>

    <tr>
      <th>Previous Jobs for <%= @user.first_name %><%= @user.last_name %></th>
  
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
    <% @posts.each do |post| %>
    <%if @user.id == post.user_id %>
      <tr>
        <td><%= image_tag post.asset.url(:thumb), class: "img-thumbnail" %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.location %></td>
        <td><%= post.rate %></td>
        <td><%= link_to 'View', post %></td>
       </tr>
    <%end%>
  </tbody>
  <%end%>
</table>
