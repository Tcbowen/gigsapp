  <head>

    <title>Profile</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag "profile" %>
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
      <%= stylesheet_link_tag "header" %>

  </head>
  <div class = "headerbreak"></div>
  <body>

    <!-- Page Content -->

      <!-- Page Heading/Breadcrumbs -->

<div class="container">
    <div class="jumbotron" style="margin-top: 30px">
        <div class="container" style="margin-bottom: 20px;margin-top: 30px;">
    	     <div class ="row">
    	         <div class="col-lg-10" style="text-align: right;">
              </div>
   		     </div>
              <div class="row">
                  <div class="col-lg-4" style="margin-right: 40px;">
        	           <div class="row">
                      <% if  @user.profile_image.blank? %>
                      <%= image_tag"default_profile.png" %>
                      <% else %>
                      <%= image_tag @user.profile_image.url(:medium)%>
                      <% end %>
                      </div>
                    </div>
                      <div class="col-lg-6" style="text-align: left;">
                        <h4 style="margin-top: 20px;margin-bottom: 10px;color: black"><%= @user.first_name%> <%= @user.last_name %></h4>
                        <%= image_tag("baseline_location_on_black_18dp.png", :alt => "profile") %> <%= @user.city %>
                        <h5 style="margin-top: 30px;">Rating:</h5>
                        <b><%= @user %> "/ 10" </b>
                      </div>
              </div>
              <% if !(@user.linkedin.blank?) %>
              <div class="row" style="margin-top: 60px;">
              <%= link_to(image_tag("linkedin.png", :alt => "linkedin"), @user.linkedin) %>
              </div>
              <% end %>
                    <hr class="featurette-divider">
                    <div class="row">
                        <div class="col-lg-10" style="text-align: left;">
                          <b><%= @user.bio %></b>
                        </div>
                    </div>
        </div>
    </div>
</div>       
<% if user_signed_in? %>
  <% if current_user.id == @user.id  %>
    <div class="container">
        <div class="jumbotron" style="margin-bottom: 20px;margin-top: 30px;">
            <div class="row">
                  <div class="col-lg-10" style="text-align: left;">
                  <h5> Private Data </h5>
                  <div>Address <%= @user.address %>, <%= @user.city %>, <%= @user.state %> <%= @user.zip %></div>
                 <%= image_tag("outline_mail_outline_black_18dp.png", :alt => "profile")%><%= @user.email %>
                 </div>
            </div>
        </div>
    </div>
  <%end%>
<%end%>
